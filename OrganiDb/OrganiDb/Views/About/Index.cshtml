
@{
    ViewData["Title"] = "About Page";
}
@model AboutVM

@section Css{
    <link rel="stylesheet" href="~/assets/css/pages/about/about.css">
}

<!--MAIN-START-->

<main>


    <!--BANNER-START-->

    <section id="banner">

        <div class="col-sm-12 col-md-12 col-lg-12">

            <div class="banner" style="background-image: url(assets/images/banners/@Model.Banners.Skip(6).Take(1).FirstOrDefault().Image)">
                <h1>@Model.BannerInfos.Skip(4).Take(1).FirstOrDefault().Title</h1>
                <p>@Model.BannerInfos.Skip(4).Take(1).FirstOrDefault().Description</p>
            </div>

        </div>

    </section>

    <!--BANNER-END-->

    <!--ABOUT-START-->

    <section id="about">
        <div class="container mt-5">

            <div class="breadcrumb-sortby d-flex">

                <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <div class="breadcrumb-items">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Shop" asp-action="Index">Shop</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Blog" asp-action="Index">Blog</a></li>
                        <li class="breadcrumb-item active"><a asp-controller="About" asp-action="Index">About</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Contact" asp-action="Index">Contact</a></li>
            </div>
            </ol>
            </nav>

        </div>

        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="left-side">
                    <div class="about-image">
                        <img src="~/assets/images/banners/@Model.Banners.Skip(9).Take(1).FirstOrDefault().Image" alt="">
                    </div>
                </div>
            </div>

            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="right-side">

                    <div class="about-content">
                        <div class="about-title">
                            <h2>Vegetables and Fruits</h2>
                        </div>

                        <div class="about-description mt-4">
                            <p>
                                Fruits and vegetables contain important vitamins, minerals and plant chemicals.
                                There are many varieties of fruit and vegetables available and many ways to prepare, cook and serve
                                them.
                                A diet high in fruit and vegetables can help protect you against cancer, diabetes and heart disease.
                            </p>
                        </div>
                    </div>

                    <div class="about-services">

                        <div class="service-item">
                            <div class="service">
                                <div class="service-image">
                                    <img src="~/assets/images/services/money-back.png" alt="">
                                </div>
                                <div class="service-text">
                                    <span>Return Policy</span>
                                    <p>Money back guarantee</p>
                                </div>
                            </div>

                            <div class="service">
                                <div class="service-image">
                                    <img src="~/assets/images/services/free-delivery.png" alt="">
                                </div>
                                <div class="service-text">
                                    <span>Free Shipping</span>
                                    <p>On all orders over $60.00</p>
                                </div>
                            </div>
                        </div>

                        <div class="service-item">

                            <div class="service">
                                <div class="service-image">
                                    <img src="~/assets/images/services/shopping-store.png" alt="">
                                </div>
                                <div class="service-text">
                                    <span>Store Locator</span>
                                    <p>Find your nearest store</p>
                                </div>
                            </div>

                            <div class="service">
                                <div class="service-image">
                                    <img src="~/assets/images/services/payment-protection.png" alt="">
                                </div>
                                <div class="service-text">
                                    <span>Secure Payment</span>
                                    <p>Your money is 100% secure</p>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>

        </div>

    </section>

    <!--ABOUT-END-->

    <!--BRAND-START-->

    <section id="brand">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="brands">

                <div class="brand-item">
                    <img src="~/assets/images/brands/brand1.png" alt="">
                </div>

                <div class="brand-item">
                    <img src="~/assets/images/brands/brand2.png" alt="">
                </div>

                <div class="brand-item">
                    <img src="~/assets/images/brands/brand3.png" alt="">
                </div>

                <div class="brand-item">
                    <img src="~/assets/images/brands/brand4.png" alt="">
                </div>

                <div class="brand-item">
                    <img src="~/assets/images/brands/brand5.png" alt="">
                </div>

                <div class="brand-item">
                    <img src="~/assets/images/brands/brand6.png" alt="">
                </div>

                <div class="brand-item">
                    <img src="~/assets/images/brands/brand7.png" alt="">
                </div>

            </div>
        </div>

    </section>

    <!--BRAND-END-->

    <!--TEAM-FARMER-START-->

    <section id="team-farmer">

        <div class="container">

            <div class="team-farmer-section-title text-center mt-5">
                <span class="team-farmer-section-tagline">@Model.TeamFarmerHeader.Title</span>
                @Html.Raw(Model.TeamFarmerHeader.Description)
            </div>

            <div class="row">
                @foreach (TeamFarmer teamFarmer in Model.TeamFarmers)
                {
                    <div class="col-sm-12 col-md-6 col-lg-4">
                        <div class="team-farmer">
                            <div class="team-farmer-image">
                                <div class="team-farmer-shape4">
                                    <img src="~/assets/images/shapes/shape4.png" alt="">
                                </div>
                                <div class="team-farmer-shape1">
                                    <img src="~/assets/images/shapes/shape1.png" alt="">
                                    <div class="team-farmer-img">
                                        <img src="~/assets/images/team-farmers/@teamFarmer.Image" alt="">
                                    </div>
                                </div>
                            </div>
                            <div class="team-farmer-content">
                                <div class="team-farmer-shape2">
                                    <img src="~/assets/images/shapes/shape2.png" alt="">
                                </div>
                                <div class="team-farmer-shape3">
                                    <img src="~/assets/images/shapes/shape3.png" alt="">
                                </div>
                                <div class="team-two-title-box">
                                    <h3 class="team-farmer-title"><a href="">@teamFarmer.FullName</a></h3>
                                    <p class="team-farmer-subtitle">@teamFarmer.Position.Name</p>
                                </div>
                                <div class="team-two-social-box">
                                    <a href="https://www.twitter.com">@Html.Raw(teamFarmer.TeamFarmerSocialMedias.Where(m => m.SocialMediaId == 5).FirstOrDefault().SocialMedia.Name)</a>
                                    <a href="https://www.facebook.com">@Html.Raw(teamFarmer.TeamFarmerSocialMedias.Where(m => m.SocialMediaId == 4).FirstOrDefault().SocialMedia.Name)</a>
                                    <a href="https://www.instagram.com">@Html.Raw(teamFarmer.TeamFarmerSocialMedias.Where(m => m.SocialMediaId == 6).FirstOrDefault().SocialMedia.Name)</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!--TEAM-FARMER-END-->

    <!--FEEDBACK-START-->

    <section id="feedback" class="mt-4">
        <div class="container">

            <h2>What Client Say About Us</h2>
            <div class="col-sm-12 col-md-12 col-lg-12">

                <div id="carouselExample" class="carousel slide slider">

                    <div class="carousel-inner carousel">

                        <div class="carousel-item active">

                            <div class="bg-color bg-color1">

                                <div class="feedback-image">
                                    <img src="~/assets/images/feedbacks/feedback4.jpg" alt="">
                                </div>
                                <div class="feedback-name mt-3">
                                    <span>William Smith</span>
                                </div>
                                <div class="feedback-position mt-2">
                                    <span>Sales Manager</span>
                                </div>
                                <div class="feedback-description">
                                    <p>
                                        " Mostly describes different categories of vegetable by the part we eat and lists some in
                                        different categories. Doesn't really explain much about why we eat different parts of different
                                        vegetables or what we get from them. "
                                    </p>
                                </div>

                            </div>
                        </div>
                        <div class="carousel-item">

                            <div class="bg-color bg-color2">

                                <div class="feedback-image">
                                    <img src="~/assets/images/feedbacks/feedback5.jpg" alt="">
                                </div>
                                <div class="feedback-name mt-3">
                                    <span>Linda Morgan</span>
                                </div>
                                <div class="feedback-position mt-2">
                                    <span>Human Resources</span>
                                </div>
                                <div class="feedback-description">
                                    <p>
                                        " Nutrition is both a quantity and a quality issue, and vegetables in all their many forms ensure
                                        an adequate intake of most vitamins and nutrients, dietary fibers, and phytochemicals to solve
                                        many of these nutrition problems. "
                                    </p>
                                </div>

                            </div>
                        </div>
                        <div class="carousel-item">

                            <div class="bg-color bg-color3">

                                <div class="feedback-image">
                                    <img src="~/assets/images/feedbacks/feedback6.jpg" alt="">
                                </div>
                                <div class="feedback-name mt-3">
                                    <span>David Neelson</span>
                                </div>
                                <div class="feedback-position mt-2">
                                    <span>Administrator</span>
                                </div>
                                <div class="feedback-description">
                                    <p>
                                        " The promotion of healthy vegetable products has coincided with a surging consumer interested in
                                        the healthy functionality of food. Because each vegetable contains a unique combination of
                                        phytonutriceuticals. "
                                    </p>
                                </div>

                            </div>
                        </div>

                    </div>

                    <button class="carousel-control-prev prev btn" type="button" data-bs-target="#carouselExample"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>

                    <button class="carousel-control-next next btn" type="button" data-bs-target="#carouselExample"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

        </div>

    </section>

    <!--FEEDBACK-END-->


</main>


<!--MAIN-END-->

@section Scripts{
         <script src="~/assets/js/about.js"></script>
}