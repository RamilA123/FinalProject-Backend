
@{
    ViewData["Title"] = "About";
}
@model AboutVM

@section Css{
    <link rel="stylesheet" href="~/assets/css/pages/about/about.css">
}

<!--MAIN-START-->

<main>


    <!--BANNER-START-->

    <section id="banner">

        <div class="col-sm-12 col-md-12 col-lg-12">

            <div class="banner" style="background-image: url(assets/images/banners/@Model.Banners.Skip(6).Take(1).FirstOrDefault().Image)">
                <h1>@Model.BannerInfos.Skip(4).Take(1).FirstOrDefault().Title</h1>
                <p>@Model.BannerInfos.Skip(4).Take(1).FirstOrDefault().Description</p>
            </div>

        </div>

    </section>

    <!--BANNER-END-->

    <!--ABOUT-START-->

    <section id="about">
        <div class="container mt-5">

            <div class="breadcrumb-sortby d-flex">

                <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <div class="breadcrumb-items">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Shop" asp-action="Index">Shop</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Blog" asp-action="Index">Blog</a></li>
                        <li class="breadcrumb-item active"><a asp-controller="About" asp-action="Index">About</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Contact" asp-action="Index">Contact</a></li>
            </div>
            </ol>
            </nav>

        </div>

        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="left-side">
                    <div class="about-image">
                        <img src="~/assets/images/banners/@Model.Banners.Skip(9).Take(1).FirstOrDefault().Image" alt="">
                    </div>
                </div>
            </div>

            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="right-side">
                    <div class="about-content">
                        <div class="about-title">
                            <h2>@Model.About.Title</h2>
                        </div>

                        <div class="about-description mt-4">
                            <p>@Model.About.Description</p>
                        </div>
                    </div>

                    <div class="about-services">

                        <div class="service-item">
                            @foreach (Assistance assistance in Model.About.Assistances)
                            {
                              <div class="service">

                                <div class="service-image">
                                    <img src="~/assets/images/services/@assistance.Image" alt="">
                                </div>

                                <div class="service-text">
                                    <span>@assistance.Title</span>
                                    <p>@assistance.Description</p>
                                </div>
                              </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>

    </section>

    <!--ABOUT-END-->

    <!--BRAND-START-->

    <section id="brand">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="brands">
                @foreach (Brand brand in Model.Brands)
                {
                    <div class="brand-item">
                        <img src="~/assets/images/brands/@brand.Image" alt="">
                    </div>
                }
            </div>
        </div>

    </section>

    <!--BRAND-END-->

    <!--TEAM-FARMER-START-->

    <section id="team-farmer">

        <div class="container">

            <div class="team-farmer-section-title text-center mt-5">
                <span class="team-farmer-section-tagline">@Model.TeamFarmerHeader.Title</span>
                @Html.Raw(Model.TeamFarmerHeader.Description)
            </div>

            <div class="row">
                @foreach (TeamFarmer teamFarmer in Model.TeamFarmers)
                {
                    <div class="col-sm-12 col-md-6 col-lg-4">
                        <div class="team-farmer">
                            <div class="team-farmer-image">
                                <div class="team-farmer-shape4">
                                    <img src="~/assets/images/shapes/shape4.png" alt="">
                                </div>
                                <div class="team-farmer-shape1">
                                    <img src="~/assets/images/shapes/shape1.png" alt="">
                                    <div class="team-farmer-img">
                                        <img src="~/assets/images/team-farmers/@teamFarmer.Image" alt="">
                                    </div>
                                </div>
                            </div>
                            <div class="team-farmer-content">
                                <div class="team-farmer-shape2">
                                    <img src="~/assets/images/shapes/shape2.png" alt="">
                                </div>
                                <div class="team-farmer-shape3">
                                    <img src="~/assets/images/shapes/shape3.png" alt="">
                                </div>
                                <div class="team-two-title-box">
                                    <h3 class="team-farmer-title"><a href="">@teamFarmer.FullName</a></h3>
                                    <p class="team-farmer-subtitle">@teamFarmer.Position.Name</p>
                                </div>
                                <div class="team-two-social-box">
                                 <a href="https://www.twitter.com">@Html.Raw(teamFarmer.TeamFarmerSocialMedias.
                                     Where(m => m.TeamFarmerId == teamFarmer.Id).Where(m => m.SocialMediaId == m.SocialMedia.Id).
                                     Skip(1).Take(1).FirstOrDefault().SocialMedia.Name)</a>
                                  <a href="https://www.facebook.com">@Html.Raw(teamFarmer.TeamFarmerSocialMedias.
                                     Where(m => m.TeamFarmerId == teamFarmer.Id).
                                     Where(m => m.SocialMediaId == m.SocialMedia.Id).
                                     Take(1).FirstOrDefault().SocialMedia.Name)</a>
                                  <a href="https://www.instagram.com">@Html.Raw(teamFarmer.TeamFarmerSocialMedias.
                                     Where(m => m.TeamFarmerId == teamFarmer.Id).
                                     Where(m => m.SocialMediaId == m.SocialMedia.Id).
                                     Skip(2).Take(1).FirstOrDefault().SocialMedia.Name)
                                  </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!--TEAM-FARMER-END-->

    <!--FEEDBACK-START-->

    <section id="feedback" class="mt-4">
        <div class="container">

            <h2>What Client Say About Us</h2>
            <div class="col-sm-12 col-md-12 col-lg-12">

                <div id="carouselExample" class="carousel slide slider">

                    <div class="carousel-inner carousel">

                        @foreach (Customer customer in Model.Customers)
                        {
                            <div class="carousel-item @(customer == Model.Customers.FirstOrDefault() ? "active" : "")">

                                <div class="bg-color bg-color1">

                                    <div class="feedback-image">
                                        <img src="~/assets/images/feedbacks/@customer.Image" alt="">
                                    </div>
                                    <div class="feedback-name mt-3">
                                        <span>@customer.FullName</span>
                                    </div>
                                    <div class="feedback-position mt-2">
                                        <span>@customer.Position.Name</span>
                                    </div>
                                    <div class="feedback-description">
                                        <p>@customer.Description</p>
                                    </div>

                                </div>
                            </div>
                        }

                    </div>

                    <button class="carousel-control-prev prev btn" type="button" data-bs-target="#carouselExample"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>

                    <button class="carousel-control-next next btn" type="button" data-bs-target="#carouselExample"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

        </div>

    </section>

    <!--FEEDBACK-END-->


</main>


<!--MAIN-END-->

@section Scripts{
         <script src="~/assets/js/about.js"></script>
}