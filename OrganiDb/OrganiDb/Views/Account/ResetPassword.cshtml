
@{
    ViewData["Title"] = "Reset Password";
}

@model ResetPasswordVM

@section Css{
    <link rel="stylesheet" href="~/assets/css/pages/reset-password/reset-password.css">
}

<!--MAIN-START-->

<main>

   <!--BANNER-START-->

    <section id="banner">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="banner">
                <img src="~/assets/images/banners/@Model.Banners.Skip(6).Take(1).FirstOrDefault().Image" />
                <h1>@Model.BannerInfos.Skip(11).Take(1).FirstOrDefault().Title</h1>
            </div>
        </div>
    </section>

    <!--BANNER-END-->


    <!--RESET-PASSWORD-START-->

    <section id="reset-password">

        <div class="container">
            <div class="col-sm-12 col-md-12 col-lg-12">

                <div class="reset-password">

                    <div class="reset-password-image">
                        <img src="~/assets/images/info-logos/@Model.Data.SettingDatas["HeaderLogo"]" alt="">
                    </div>

                    <div class="reset-password-lock">
                        <i class="fa-solid fa-lock"></i>
                        <h2 class="mt-4">Reset Password?</h2>
                        <p class="mt-3">You can change password here</p>
                    </div>


                    <form method="post" asp-action="ResetPassword">
                        <div class="reset-password-content">

                            <div class="input-icon">
                                <label for="">New Password *</label>
                                <input class="form-control" asp-for="NewPassword" placeholder="New Password">
                                <i class="fa-solid fa-eye eye"></i>
                                <div class="line"></div>
                            </div>

                            <div class="input-icon">
                                <label for="">Confirm Password *</label>
                                <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
                                <i class="fa-solid fa-eye eye"></i>
                                <div class="line"></div>
                            </div>
                            <input class="form-control" type="hidden" asp-for="UserId" value="@Model.UserId" placeholder="Confirm Password">
                            <input class="form-control" type="hidden" asp-for="Token" value="@Model.Token" placeholder="Confirm Password">
                            <button type="submit" class="btn btn-success rounded-5">Change Password</a>
                        
                        </div>
                        <div class="text-danger" asp-validation-summary="All" role="alert">
                        </div>
                    </form>


                </div>

            </div>
        </div>



    </section>

    <!--RESET-PASSWORD-END-->



</main>


<!--MAIN-END-->

@section Scripts{
   <script src="~/assets/js/reset-password.js"></script>
   <partial name="_ValidationScriptsPartial" />
}

