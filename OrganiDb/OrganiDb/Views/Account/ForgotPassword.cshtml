
@{
    ViewData["Title"] = "Forgot Password Page";
}

@model ForgotPasswordVM

@section Css{
    <link rel="stylesheet" href="~/assets/css/pages/forgot-password/forgot-password.css">
}
    <!--MAIN-START-->

    <main>


        <!--BANNER-START-->

    <section id="banner">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="banner">
                <img src="~/assets/images/banners/@Model.Banners.Skip(6).Take(1).FirstOrDefault().Image" />
                <h1>@Model.BannerInfos.Skip(10).Take(1).FirstOrDefault().Title</h1>
            </div>
        </div>
    </section>

    <!--BANNER-END-->



        <!--FORGOT-PASSWORD-START-->

        <section id="forgot-password">

            <div class="container">
                <div class="col-sm-12 col-md-12 col-lg-12">

                    <div class="forgot-password">

                        <div class="forgot-password-image">
                            <img src="~/assets/images/info-logos/@Model.Data.SettingDatas["HeaderLogo"]" alt="">
                        </div>

                        <div class="forgot-password-lock">
                            <i class="fa-solid fa-lock"></i>
                            <h2 class="mt-4">Forgot Password?</h2>
                            <p class="mt-3">You can reset password here</p>
                        </div>
                        <form method="post" asp-action="ForgotPassword">
                            <div class="forgot-password-content">
                                <div class="input-icon">              
                                    <i class="fa-solid fa-envelope"></i>
                                    <input class="form-control" asp-for="Email" placeholder="Enter Your Email">
                                </div>
                                <button type="submit" class="btn btn-success rounded-5">Submit Link</a>
                            </div>
                           <div class="text-danger" asp-validation-summary="All" role="alert">
                           </div>
                        </form>


                    </div>

                </div>
            </div>



        </section>

        <!--FORGOT-PASSWORD-END-->



    </main>


    <!--MAIN-END-->


@section Scripts{
    <script src="~/assets/js/forgot-password.js"></script>
    <partial name="_ValidationScriptsPartial" />
}