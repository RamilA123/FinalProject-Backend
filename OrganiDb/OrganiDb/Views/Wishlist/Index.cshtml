
@{
    ViewData["Title"] = "Wishlist Page";
}

@section Css{
    <link rel="stylesheet" href="~/assets/css/pages/wishlist/wishlist.css">
}

<!--MAIN-START-->

<main>


    <!--BANNER-START-->

    <section id="banner">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="banner" style="background-image: url(assets/images/banners/banner6.jpg)">
                <h1>Shopping Wishlist</h1>
            </div>
        </div>
    </section>

    <!--BANNER-END-->
    <!--WISHLIST-TABLE-START-->

    <section id="wishlist-table" class="py-2">

        <div class="container">
            <div class="wishlist">
                <div class="col-sm-12 col-md-12 col-lg-12">

                    <div class="wishlist">
                        <h1>Products</h1>
                        <table class="table table-striped table-bordered my-5">
                            <thead>
                                <tr class="table-success">
                                    <th scope="col">Image</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Option</th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <td>
                                        <i class="fa-solid fa-trash-can trash"></i>
                                        <img src="~/assets/images/products/tomato1.png" alt="">
                                    </td>
                                    <td class="cell">Tomato</td>
                                    <td class="cell">$30</td>
                                    <td class="cell">
                                        <button class="btn btn-danger rounded-5">Add To Cart</button>
                                    </td>
                                </tr>


                                <tr>
                                    <td>
                                        <i class="fa-solid fa-trash-can trash"></i>
                                        <img src="~/assets/images/products/pizza1.png" alt="">
                                    </td>
                                    <td class="cell">Pizza</td>
                                    <td class="cell">$70</td>
                                    <td class="cell">
                                        <button class="btn btn-danger rounded-5">Add To Cart</button>
                                    </td>
                                </tr>


                                <tr>
                                    <td>
                                        <i class="fa-solid fa-trash-can trash"></i>
                                        <img src="~/assets/images/products/carrot1.png" alt="">
                                    </td>
                                    <td class="cell">Carrot</td>
                                    <td class="cell">$80</td>
                                    <td class="cell">
                                        <button class="btn btn-danger rounded-5">Add To Cart</button>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <i class="fa-solid fa-trash-can trash"></i>
                                        <img src="~/assets/images/products/hamburger1.png" alt="">
                                    </td>
                                    <td class="cell">Burger</td>
                                    <td class="cell">$35</td>
                                    <td class="cell">
                                        <button class="btn btn-danger rounded-5">Add To Cart</button>
                                    </td>
                                </tr>




                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>

        <div class="wishlist-empty d-none">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="alert alert-danger" role="alert">
                    <span>Your wishlist is currently empty!</span>
                    <div class="wishlist-icon">
                        <img src="~/assets/images/info-logos/green-love.png" alt="">
                    </div>

                    <p>
                        You add some products to your wishlist. You will find a lot of
                        products on our "Shop" page.
                    </p>

                    <div class="shop-btn">
                        <a class="btn btn-success rounded-5" href="shop.html">Return To Shop</a>
                    </div>

                </div>
            </div>

        </div>

    </section>

    <!--WISHLIST-TABLE-END-->



</main>


<!--MAIN-END-->

@section Scripts{
    <script src="~/assets/js/wishlist.js"></script>
}